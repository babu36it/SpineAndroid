<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_350"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/imageButton32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eight"
        android:layout_marginTop="@dimen/sixteen"
        android:background="@android:color/transparent"
        android:elevation="@dimen/eight"
        android:padding="@dimen/eight"
        android:src="@drawable/ic_close"
        android:tint="@color/text_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginTop="@dimen/eight"
        android:layout_marginEnd="@dimen/sixteen"
        android:background="@drawable/shadow_box"
        android:orientation="vertical"
        android:padding="@dimen/sixteen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButton32">

        <TextView
            android:id="@+id/textView174"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/i_d_like_to_join"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Yoga Weekend Retreat -
Reclaiming Your Center"
            android:textAlignment="center"
            android:textColor="@color/darkback"
            android:textSize="@dimen/normalText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEventDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/normalText"
            android:textAlignment="center"
            android:textColor="@color/darkback" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/text_white"
            app:cardCornerRadius="@dimen/eight"
            app:cardElevation="@dimen/eight"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/editTextTextPersonName20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100"
                android:background="@drawable/shadow_box"
                android:ems="10"
                android:gravity="start"
                android:hint="Dear host, Iâ€™d like to join your event."
                android:textSize="@dimen/normalText"
                android:inputType="textPersonName|textMultiLine"
                android:padding="@dimen/eight" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/eight"
            android:layout_marginBottom="@dimen/eight"
            android:background="@drawable/round_button_bg"
            android:text="@string/send" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>