<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_350"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/eight"
    app:cardElevation="@dimen/sixteen"
    app:cardUseCompatPadding="true"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView265"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight"
        android:text="@string/add_hashtags"
        style="@style/TitleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName27"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen"
        android:layout_marginEnd="@dimen/sixteen"
        android:padding="@dimen/eight"
        android:background="@drawable/shadow_box"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/search_hashtag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView265" />

    <TextView
        android:id="@+id/textView267"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight"
        android:text=""
        style="@style/OnlyText"
        android:textColor="@color/blue"
        android:padding="@dimen/eight"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName27"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName27"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName27" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHashtagList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight"
        app:layout_constraintEnd_toEndOf="@+id/textView267"
        app:layout_constraintStart_toStartOf="@+id/textView267"
        app:layout_constraintTop_toBottomOf="@+id/textView267" />

    <ImageButton
        android:id="@+id/imageButton70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_close"
        android:background="@color/transparent"
        android:padding="@dimen/eight"
         />

    <Button
        android:id="@+id/Button71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        style="@style/TextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>