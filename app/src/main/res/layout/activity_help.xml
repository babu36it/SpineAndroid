<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.wiesoftware.spine.ui.home.menus.profile.setting.help.HelpViewmodel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.menus.profile.setting.help.HelpActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton43"
                style="@style/BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="@{viewmodel.onBack}" />

            <TextView
                android:id="@+id/textView212"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toRightOf="@id/imageButton43"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:paddingTop="@dimen/_8sdp"
                android:text="@string/help_info"
                android:textAllCaps="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_13sdp" />


        </RelativeLayout>


        <View
            android:layout_height="@dimen/_1sdp"
            android:background="@color/normal_grey"
            android:id="@+id/view42"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView212" />

        <TextView
            android:id="@+id/textView227"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/support"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/imageButton43"
            app:layout_constraintTop_toBottomOf="@+id/view42" />

        <View
            android:id="@+id/view44"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginEnd="@dimen/sixteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView227" />

        <TextView
            android:id="@+id/button81"
            style="@style/ButtonSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_semi_bold"
            android:onClick="@{viewmodel.onHelp}"
            android:text="@string/help"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_11sdp" />

        <View
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView212" />

        <TextView
            android:layout_marginStart="@dimen/_15sdp"
            android:id="@+id/button82"
            style="@style/ButtonSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_semi_bold"
            android:onClick="@{viewmodel.giveFeedback}"
            android:text="@string/give_us_feedback"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button81" />

        <View
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView212" />

        <TextView
            android:id="@+id/textView228"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/info"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/textView227"
            app:layout_constraintTop_toBottomOf="@+id/button82" />


        <View
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView212" />

        <TextView
            android:id="@+id/button83"
            style="@style/ButtonSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_semi_bold"
            android:onClick="@{viewmodel.onCommunityGuideLines}"
            android:text="@string/community_guidelines"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view45" />

        <View
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView212" />

        <TextView
            android:id="@+id/button84"
            style="@style/ButtonSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_semi_bold"
            android:onClick="@{viewmodel.onAboutSpine}"
            android:text="@string/about_spine"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button83" />

        <View
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView212" />

        <TextView
            android:id="@+id/textView229"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/legal"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/textView227"
            app:layout_constraintTop_toBottomOf="@+id/button84" />

        <View
            android:layout_marginTop="@dimen/_8sdp"
            android:id="@+id/view46"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/sixteen"
            android:layout_marginEnd="@dimen/sixteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView229" />

        <TextView
            android:id="@+id/button85"
            style="@style/ButtonSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_semi_bold"
            android:onClick="@{viewmodel.onTermsOfService}"
            android:text="@string/terms_of_service"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_11sdp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view46" />

        <View
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView229" />

        <TextView
            android:id="@+id/button86"
            style="@style/ButtonSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/poppins_semi_bold"
            android:onClick="@{viewmodel.onPrivacySettings}"
            android:text="@string/privacy_settings"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button85" />

        <View
            android:layout_marginTop="@dimen/_8sdp"
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView229" />

        <RelativeLayout
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/button87"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/app_version"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/textView230"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/button87"
                app:layout_constraintEnd_toEndOf="@+id/button87"
                app:layout_constraintTop_toTopOf="@+id/button87" />


        </RelativeLayout>

        <View
            style="@style/ViewActionLine"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView229" />


    </LinearLayout>
</layout>