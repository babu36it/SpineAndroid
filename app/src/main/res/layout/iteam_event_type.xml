<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="model"
            type="com.wiesoftware.spine.data.net.reponses.EventTypeRes" />
    </data>
    <LinearLayout
        android:orientation="vertical"
       android:padding="@dimen/_8sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="@color/light_gry"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/rl_local"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp">

            <TextView
                android:id="@+id/txt_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppin_bold"
                android:text="@string/local_event"
                android:textAlignment="textStart"
                android:textColor="@color/day_night_both_black"
                android:textSize="@dimen/_13sdp">

            </TextView>

            <ImageView
                android:id="@+id/ivArrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_local"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toStartOf="@+id/ivArrow1"
                android:fontFamily="@font/poppin_regular"
                android:text="@string/requires_meeting_in_physical_location"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray_day_night"
                android:textSize="@dimen/_11sdp">

            </TextView>

        </RelativeLayout>

    </LinearLayout>
</layout>
