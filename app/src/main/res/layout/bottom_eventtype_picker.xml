<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/top_two_round_back"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_minusprimary"
        app:tint="@color/overlay_color_primary">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/poppins_bold"
        android:padding="@dimen/_6sdp"
        android:text="What kind of events is it?"
        android:textAlignment="center"
        android:textColor="@color/day_night_both_black"
        android:textSize="@dimen/_14sdp">

    </TextView>

    <View
        android:id="@+id/view11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/rl_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/txt_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin_bold"
            android:text="@string/local_event"
            android:textAlignment="textStart"
            android:textSize="@dimen/_13sdp">

        </TextView>

        <ImageView
            android:id="@+id/ivArrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_local"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toStartOf="@+id/ivArrow1"
            android:fontFamily="@font/poppin_regular"
            android:text="@string/requires_meeting_in_physical_location"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray_day_night"
            android:textSize="@dimen/_11sdp">

        </TextView>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/rl_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/txt_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin_bold"
            android:text="@string/online_event"
            android:textAlignment="textStart"
            android:textSize="@dimen/_13sdp">

        </TextView>

        <ImageView
            android:id="@+id/ivArrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_online"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toStartOf="@+id/ivArrow2"
            android:fontFamily="@font/poppin_regular"
            android:text="@string/virtual_event_livestream_experiences_on_the_web_zoom_youtube_etc"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray_day_night"
            android:textSize="@dimen/_11sdp">

        </TextView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/rl_retreat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/txt_retreat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin_bold"
            android:text="@string/retreat"
            android:textAlignment="textStart"
            android:textSize="@dimen/_13sdp">

        </TextView>

        <ImageView
            android:id="@+id/ivArrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin_regular"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_below="@+id/txt_retreat"
            android:text="@string/spiritual_gateways_for_2_days_spiritual_vacation"
            android:textAlignment="textStart"
            android:layout_toStartOf="@+id/ivArrow3"
            android:textColor="@color/dark_gray_day_night"
            android:textSize="@dimen/_11sdp">

        </TextView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@android:color/darker_gray" />


    <RelativeLayout
        android:id="@+id/rl_metaverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/txt_metaverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin_bold"
            android:text="@string/metaverse_sessions"
            android:textAlignment="textStart"
            android:textSize="@dimen/_13sdp">

        </TextView>

        <ImageView
            android:id="@+id/ivArrow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppin_regular"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_below="@+id/txt_metaverse"
            android:text="@string/metaverse_sessions_details"
            android:textAlignment="textStart"
            android:layout_toStartOf="@+id/ivArrow4"
            android:textColor="@color/dark_gray_day_night"
            android:textSize="@dimen/_11sdp">

        </TextView>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@android:color/darker_gray" />

</LinearLayout>