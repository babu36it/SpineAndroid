<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/poppins_regular</item>


    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
    <style name="ButtonRoundwhite" parent="android:Widget.Button">
        <item name="android:background">@drawable/round_white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

        <item name="fontFamily">@font/poppin_semi_bold</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="BackButton" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="android:layout_marginStart">@dimen/eight</item>
        <item name="android:layout_marginTop">@dimen/eight</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="tint">#FFFFFF</item>
    </style>
    <style name="HeadingText" parent="android:Widget.TextView">
        <item name="android:layout_marginStart">@dimen/eight</item>
        <item name="android:layout_marginEnd">@dimen/eight</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <style name="RoundButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/round_button_bg</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>
    <style name="TitleText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>


    <style name="EventTitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="fontFamily">@font/poppin_semi_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SimpleText_Sami_bold" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SimpleText_Grey" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NormalText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="SimpleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TabText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="OnlyText" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextButton" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextButtonRegular" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>


    <style name="EditTextSpine" parent="android:Widget.EditText">
        <item name="android:layout_marginStart">@dimen/thirty_two</item>
        <item name="android:layout_marginTop">@dimen/eight</item>
        <item name="android:layout_marginEnd">@dimen/thirty_two</item>
        <item name="android:background">@drawable/et_bg</item>
        <item name="android:paddingEnd">@dimen/sixteen</item>
        <item name="android:paddingStart">@dimen/sixteen</item>
        <item name="android:paddingBottom">@dimen/_12</item>
        <item name="android:paddingTop">@dimen/_12</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ETNormal" parent="android:Widget.EditText">
        <item name="android:background">@drawable/shadow_box</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">@dimen/eight</item>
        <item name="android:elevation">@dimen/eight</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColorHint">@color/dark_gray_day_night</item>
    </style>



    <style name="ButtonSetting" parent="android:Widget.Button">
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/eight</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ButtonRound" parent="android:Widget.Button">
        <item name="android:background">@drawable/round_button_bg</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ViewActionLine" parent="android:Widget">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:background">@color/normal_grey</item>
        <item name="android:layout_marginTop">@dimen/eight</item>
    </style>


    <style name="tab_layout">
        <item name="tabSelectedTextColor">@color/text_black</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="IconTextView" parent="Widget.AppCompat.TextView">
        <item name="android:drawableStart">@drawable/ic_date</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:iconTint">@color/text_white</item>
    </style>
    <style name="StoryTitleText" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

</resources>